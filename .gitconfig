[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    syntax-theme = "Catppuccin Mocha"
    navigate = true    # use n and N to move between diff sections
    line-numbers = true
    side-by-side = true
    true-color = always

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
